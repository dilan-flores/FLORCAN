<!-- Portfolio Section-->
<section class="page-section mt-5" id="AllMascota">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">-</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-paw"></i></div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Section Portfolios -->
        <div class="row justify-content-center">
            <section class="allMascota" id="allMascota">
                <div class="container">
                        <div class="text-end mb-3">
                            <a href="/mascotas/add" class="text-decoration-none">
                                <button class="btn btn-success btn-xl" type="submit">Crear nueva registro</button>
                            </a>
                        </div>
                    <div class="row justify-content-center">
                        {{#each mascotas}}
                            <div class="col-md-6 col-lg-4 mb-2">
                                <div class="card h-100">
                                
                                    <img src="{{image.secure_url}}" class="card-img-top" alt="Skyscrapers"/>

                                    <div class="card-body">
                                        <h5 class="card-title text-decoration-underline">{{nombre}}</h5>
                                        <p class="card-text">{{raza}}</p>
                                        <p class="card-text">{{color}}</p>
                                        <small class="text-muted">{{finca}}</small>
                                    </div>
                                    <div class="card-footer text-center">
                                        <button class="btn btn-primary btn-sm">Más información</button>
                                        <a href="/mascotas/edit/{{_id}}" >
                                        <button class="btn btn-warning btn-sm">Actualizar</button>
                                        </a>
                                        <form action="/mascotas/delete/{{_id}}?_method=DELETE" method="POST" class="d-inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>